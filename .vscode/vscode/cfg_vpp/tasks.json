{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "command": "docker exec -it mra-vpp-build bash -c \"cd /home/mraoul/dev/vpp && bash build-root/scripts/checkstyle.sh --fix && make build\" ",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "docker exec -it mra-vpp-build bash -c \"cd /home/mraoul/dev/vpp && make build-release\" ",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}